extends layout

block content
  p Welcome to #{title}


  h2 Horizontal Wizard
  hr
  #wizardnav-one.wizardnav
    .wizard-steps
      ul.nav.nav-tabs
        li.active
          a(href="#tab-1", data-toggle="tab") One
        li
          a(href="#tab-2", data-toggle="tab") Two
        li
          a(href="#tab-3", data-toggle="tab") Three

      .progress-container(style="margin-top: 10px;")
        .progress.pull-left.progress-striped(style="width:100%;")
            .progress-bar.progress-bar-success(role="progressbar", aria-valuenow="10", aria-valuemin="0", aria-valuemax="100", style="width: 10%;")

    .tab-content
      #tab-1.tab-pane.active
        | Tab one

      #tab-2.tab-pane
        | Tab two

      #tab-3.tab-pane
        | Tab three

      .pager
        button.btn.btn-default.wizard-close(style="margin-right: 5px;")
          | Cancel
        button.btn.btn-default.wizard-back(style="margin-right: 5px;")
          | Previous
        button.btn.btn-success.wizard-next(style="margin-right: 5px;")
          | Next
        button.btn.btn-success.wizard-finish
          | Finish


  br
  br

  h2 Vertical Wizard
  hr
  #wizardnav-two.wizardnav
    .wizard-steps.pull-left(style="width: 200px;")
      ul.nav.nav-pills.nav-stacked
        li.active
          a(href="#tabPill-1", data-toggle="pill") One
        li
          a(href="#tabPill-2", data-toggle="pill") Two
        li
          a(href="#tabPill-3", data-toggle="pill") Three

      .progress-container(style="margin-top: 10px;")
        .progress.pull-left.progress-striped(style="width:100%;")
            .progress-bar.progress-bar-success(role="progressbar", aria-valuenow="10", aria-valuemin="0", aria-valuemax="100", style="width: 10%;")

    .tab-content
      #tabPill-1.tab-pane.active
        | Tab one 11111111111111

      #tabPill-2.tab-pane
        | Tab two 22222222222222

      #tabPill-3.tab-pane
        | Tab three 333333333333

      .pager.pull-right
        button.btn.btn-default.wizard-close(style="margin-right: 5px;")
          | Cancel
        button.btn.btn-default.wizard-back(style="margin-right: 5px;")
          | Previous
        button.btn.btn-success.wizard-next(style="margin-right: 5px;")
          | Next
        button.btn.btn-success.wizard-finish
          | Finish
